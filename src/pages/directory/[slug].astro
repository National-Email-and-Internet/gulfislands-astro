---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
import VerifiedBadge from '../../components/badges/VerifiedBadge.astro';
import PremiumBadge from '../../components/badges/PremiumBadge.astro';

export async function getStaticPaths() {
  const listings = await getCollection('directory');
  return listings.map(entry => ({
    params: { slug: entry.id.replace(/\.[^/.]+$/, "") },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { name, category, subcategory, island, description, description_long, url, tier, claimed, gallery, hours, social, map, phone, email, address } = entry.data;

const categoryLabels: Record<string, string> = {
  stay: 'Stay',
  eat: 'Eat & Drink',
  'arts-culture': 'Arts & Culture',
  shopping: 'Shopping',
  marine: 'Marine & Boating',
  'getting-here': 'Getting Here',
  'real-estate': 'Real Estate',
  activities: 'Activities & Outdoors',
  trades: 'Trades & Professional',
  health: 'Health & Wellness',
  farms: 'Farms & Agriculture',
  news: 'News & Media',
  education: 'Education',
  community: 'Community & Government',
};

function cleanUrl(u: string): string {
  return u.replace(/^https?:\/\/(www\.)?/, '').replace(/\/$/, '');
}

const catLabel = categoryLabels[category] ?? category;

// Determine hero image vs logo
let heroImage = null;
let logoImage = null;
let galleryImages = [];

if (gallery && gallery.length > 0) {
  const isLogo = (img) => img.toLowerCase().includes('logo') || img.toLowerCase().includes('avatar');
  
  if (isLogo(gallery[0])) {
    logoImage = gallery[0];
    if (gallery.length > 1 && !isLogo(gallery[1])) {
      heroImage = gallery[1];
      galleryImages = gallery.slice(2);
    } else {
      galleryImages = gallery.slice(1);
    }
  } else {
    heroImage = gallery[0];
    galleryImages = gallery.slice(1);
    // Find a logo if one exists further down (edge case)
    const logoIndex = gallery.findIndex(isLogo);
    if (logoIndex > 0) {
      logoImage = gallery[logoIndex];
      galleryImages = galleryImages.filter(img => img !== logoImage);
    }
  }
}

---

<Layout title={`${name} - ${catLabel} - ${island} - Gulf Islands Directory`}>
  
  {heroImage ? (
    <div class="w-full h-64 md:h-80 lg:h-96 relative overflow-hidden bg-ocean-900 border-b border-gray-200">
      <img src={heroImage} alt={name} class="w-full h-full object-cover opacity-80" />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 p-8 max-w-5xl mx-auto flex items-end justify-between">
        <div class="flex items-center gap-6">
          {logoImage && (
            <div class="w-24 h-24 rounded-2xl bg-white p-2 shadow-xl shrink-0 border-4 border-white/20 hidden sm:block">
              <img src={logoImage} alt={name + " logo"} class="w-full h-full object-contain" />
            </div>
          )}
          <div>
            <div class="flex flex-wrap items-center gap-3 mb-2">
              <span class="bg-white/20 backdrop-blur-md text-white text-[10px] font-black px-2.5 py-1 rounded-full uppercase tracking-widest">{catLabel}</span>
              <span class="bg-ocean-600/80 backdrop-blur-md text-white text-[10px] font-bold px-2.5 py-1 rounded-full uppercase tracking-widest">{island}</span>
              {tier === 'premium' && <PremiumBadge />}
              {claimed && <VerifiedBadge />}
            </div>
            <h1 class="font-['Playfair_Display'] text-3xl md:text-5xl font-bold text-white drop-shadow-md">{name}</h1>
          </div>
        </div>
      </div>
    </div>
  ) : (
    <div class="bg-ocean-900 py-12 border-b border-ocean-800">
      <div class="max-w-5xl mx-auto px-6 flex items-center gap-6">
        {logoImage && (
            <div class="w-20 h-20 rounded-2xl bg-white p-2 shadow-lg shrink-0">
              <img src={logoImage} alt={name + " logo"} class="w-full h-full object-contain" />
            </div>
        )}
        <div>
          <div class="flex flex-wrap items-center gap-3 mb-3">
            <span class="bg-white/10 text-white text-[10px] font-black px-2.5 py-1 rounded-full uppercase tracking-widest">{catLabel}</span>
            <span class="bg-ocean-600/80 text-white text-[10px] font-bold px-2.5 py-1 rounded-full uppercase tracking-widest">{island}</span>
            {tier === 'premium' && <PremiumBadge />}
            {claimed && <VerifiedBadge />}
          </div>
          <h1 class="font-['Playfair_Display'] text-3xl md:text-5xl font-bold text-white">{name}</h1>
        </div>
      </div>
    </div>
  )}

  <section class="py-8 md:py-12 bg-gray-50 min-h-screen">
    <div class="max-w-5xl mx-auto px-6">
      
      <!-- Breadcrumbs -->
      <nav class="flex mb-8 text-sm text-gray-500">
        <a href="/" class="hover:text-ocean-600 transition">Home</a>
        <span class="mx-2">/</span>
        <a href={`/directory/${category}`} class="hover:text-ocean-600 transition">{catLabel}</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium">{name}</span>
      </nav>

      <div class="grid lg:grid-cols-3 gap-8">
        
        <!-- Left Column: Content -->
        <div class="lg:col-span-2 space-y-8">
          
          <!-- Header Area -->
          <div class="bg-white rounded-3xl p-8 md:p-10 shadow-sm border border-gray-100">
            
            <div class="prose prose-ocean max-w-none text-gray-600 leading-relaxed">
              {description_long ? (
                <div set:html={description_long} />
              ) : (
                <p class="text-lg">{description || "Local business serving the Gulf Islands community."}</p>
              )}
            </div>

            {!claimed && (
              <div class="mt-10 p-6 bg-ocean-50 border border-ocean-100 rounded-2xl flex flex-col md:flex-row items-center justify-between gap-4">
                <div>
                  <p class="text-ocean-900 font-bold">Do you own this business?</p>
                  <p class="text-ocean-700 text-sm text-center md:text-left leading-relaxed">
                    Claim your listing to manage this information. Need better copy? <br class="hidden md:block"/>
                    <span class="font-semibold italic">We can write professional SEO content for your business.</span>
                  </p>
                </div>
                <a href={`/claim-listing/${entry.id.replace(/\.[^/.]+$/, "")}`} class="bg-ocean-600 hover:bg-ocean-700 text-white px-6 py-2.5 rounded-xl font-bold text-sm transition">
                  Claim Listing &rarr;
                </a>
              </div>
            )}
          </div>

          <!-- Gallery -->
          {galleryImages.length > 0 && (
            <div class="bg-white rounded-3xl p-8 md:p-10 shadow-sm border border-gray-100">
              <h2 class="font-['Playfair_Display'] text-2xl font-bold text-gray-900 mb-6">Photos</h2>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                {galleryImages.map((img, i) => (
                  <div class="aspect-square rounded-xl overflow-hidden bg-gray-100">
                    <img
                      src={img}
                      alt={name + " photo " + (i + 1)}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Right Column: Sidebar -->
        <div class="space-y-6">
          
          <!-- Contact Info Card -->
          <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
            <h3 class="font-bold text-gray-900 mb-6 uppercase text-xs tracking-widest">Connect</h3>
            
            
            <div class="space-y-4">
              {address && (
                <div class="flex items-start gap-3 p-3 bg-white border border-gray-100 rounded-2xl w-full">
                   <div class="w-10 h-10 bg-gray-50 rounded-xl flex items-center justify-center shrink-0 text-gray-500">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                   </div>
                   <div class="min-w-0 pt-0.5">
                     <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-1">Address</p>
                     <p class="text-sm font-medium text-gray-900 leading-snug">{address}</p>
                   </div>
                </div>
              )}
              {phone && (
                <a href={"tel:" + phone.replace(/[^0-9+]/g, '')} class="flex items-center gap-3 text-ocean-600 hover:text-ocean-800 transition group p-3 bg-ocean-50 rounded-2xl w-full">
                  <div class="w-10 h-10 bg-white rounded-xl flex items-center justify-center shadow-sm text-ocean-600 shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                  </div>
                  <div class="min-w-0">
                    <p class="text-[10px] font-bold text-ocean-900 uppercase tracking-tighter">Phone</p>
                    <p class="text-sm font-medium truncate">{phone}</p>
                  </div>
                </a>
              )}
              {email && (
                <a href={"mailto:" + email} class="flex items-center gap-3 text-ocean-600 hover:text-ocean-800 transition group p-3 bg-ocean-50 rounded-2xl w-full">
                  <div class="w-10 h-10 bg-white rounded-xl flex items-center justify-center shadow-sm text-ocean-600 shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                  </div>
                  <div class="min-w-0">
                    <p class="text-[10px] font-bold text-ocean-900 uppercase tracking-tighter">Email</p>
                    <p class="text-sm font-medium truncate ">{email}</p>
                  </div>
                </a>
              )}
              
              {url && (

                <a href={url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-ocean-600 hover:text-ocean-800 transition group p-3 bg-ocean-50 rounded-2xl w-full">
                  <div class="w-10 h-10 bg-white rounded-xl flex items-center justify-center shadow-sm text-ocean-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9"/></svg>
                  </div>
                  <div class="min-w-0">
                    <p class="text-[10px] font-bold text-ocean-900 uppercase tracking-tighter">Website</p>
                    <p class="text-sm font-medium truncate">{cleanUrl(url)}</p>
                  </div>
                </a>
              )}

              {social && (
                <div class="flex gap-3 mt-4">
                  {social.instagram && (
                    <a href={`https://instagram.com/${social.instagram.replace('@', '')}`} class="w-12 h-12 bg-gray-50 border border-gray-100 rounded-2xl flex items-center justify-center text-gray-600 hover:text-ocean-600 transition">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.074 4.771 4.85.058 1.266.07 1.646.07 4.85s-.012 3.584-.07 4.85c-.148 3.252-1.074 4.771-4.85 4.771-1.266.058-1.646.07-4.85.07s-3.584-.012-4.85-.07c-3.252-.148-4.771-1.074-4.771-4.85-.058-1.266-.07-1.646-.07-4.85s.012-3.584.07-4.85c.148-3.252 1.074-4.771 4.85-4.771 1.266-.058 1.646-.07 4.85-.07zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.78-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.78 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.78.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                    </a>
                  )}
                  {social.facebook && (
                    <a href={`https://facebook.com/${social.facebook}`} class="w-12 h-12 bg-gray-50 border border-gray-100 rounded-2xl flex items-center justify-center text-gray-600 hover:text-ocean-600 transition">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.8.714-1.8 1.768v2.319h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          </div>

          <!-- Hours (Premium Only) -->
          {tier === 'premium' && hours && (
            <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
              <h3 class="font-bold text-gray-900 mb-6 uppercase text-xs tracking-widest leading-none">Business Hours</h3>
              <div class="space-y-3">
                {Object.entries(hours).map(([day, time]) => (
                  <div class="flex justify-between text-sm py-2 border-b border-gray-50 last:border-0 capitalize">
                    <span class="text-gray-500 font-medium">{day}</span>
                    <span class="text-gray-900 font-semibold">{time}</span>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Map -->
          {map && (
            <div class="bg-white rounded-3xl p-3 shadow-sm border border-gray-100 overflow-hidden">
               <iframe
                 width="100%"
                 height="250"
                 style="border:0;"
                 loading="lazy"
                 allowfullscreen
                 referrerpolicy="no-referrer-when-downgrade"
                 src={"https://www.google.com/maps/embed/v1/place?key=" + (import.meta.env.PUBLIC_GOOGLE_MAPS_KEY || 'AIzaSyA_FAKE_KEY_FOR_DEV') + "&q=" + map.lat + "," + map.lng + "&zoom=15"}>
               </iframe>
            </div>
          )}

        </div>
      </div>
    </div>
  </section>
</Layout>
