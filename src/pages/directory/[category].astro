---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const categories = [
    'stay', 
    'eat', 
    'arts-culture', 
    'shopping', 
    'marine', 
    'getting-here', 
    'real-estate', 
    'activities', 
    'trades', 
    'health', 
    'farms', 
    'news', 
    'education', 
    'community'
  ];
  return categories.map(category => ({
    params: { category },
    props: { categoryName: category.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') }
  }));
}

const { category } = Astro.params;
const { categoryName } = Astro.props;

const categoryConfig: Record<string, { color: string; bg: string; label: string; icon: string }> = {
  stay: { color: 'text-ocean-600', bg: 'bg-ocean-100', label: 'Stay', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>` },
  eat: { color: 'text-forest-600', bg: 'bg-forest-100', label: 'Eat & Drink', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h1a4 4 0 110 8h-1m-4-8H4a1 1 0 00-1 1v6a1 1 0 001 1h9a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v2"/>` },
  'arts-culture': { color: 'text-purple-600', bg: 'bg-purple-100', label: 'Arts & Culture', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>` },
  shopping: { color: 'text-ocean-500', bg: 'bg-ocean-50', label: 'Shopping', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>` },
  marine: { color: 'text-ocean-700', bg: 'bg-ocean-100', label: 'Marine & Boating', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v9m0 0l-4-4m4 4l4-4M5 12h14l-2 6H7l-2-6z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 20c2 0 3-1 4-1s2 1 4 1 3-1 4-1 2 1 4 1 3-1 4-1"/>` },
  'getting-here': { color: 'text-ocean-600', bg: 'bg-ocean-100', label: 'Getting Here', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>` },
  'real-estate': { color: 'text-forest-600', bg: 'bg-forest-100', label: 'Real Estate', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>` },
  activities: { color: 'text-sand-600', bg: 'bg-sand-100', label: 'Activities & Outdoors', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>` },
  trades: { color: 'text-gray-600', bg: 'bg-gray-100', label: 'Trades & Professional', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>` },
  health: { color: 'text-teal-600', bg: 'bg-teal-100', label: 'Health & Wellness', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>` },
  farms: { color: 'text-forest-600', bg: 'bg-forest-100', label: 'Farms & Agriculture', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19V6m0 13c-2-2-5-3-7-3 0-4 2.5-7 7-7s7 3 7 7c-2 0-5 1-7 3z"/>` },
  news: { color: 'text-blue-600', bg: 'bg-blue-100', label: 'News & Media', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>` },
  education: { color: 'text-purple-700', bg: 'bg-purple-100', label: 'Education', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>` },
  community: { color: 'text-purple-600', bg: 'bg-purple-100', label: 'Community & Government', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>` },
};

const cfg = categoryConfig[category] ?? categoryConfig['services'];

function cleanUrl(url: string): string {
  return url.replace(/^https?:\/\/(www\.)?/, '').replace(/\/$/, '');
}

const allListings = await getCollection('directory');
const listings = allListings.filter(item => item.data.category === category);

// Get unique islands and their counts
const islands = [...new Set(listings.map(item => item.data.island).filter(Boolean))].sort();
const islandCounts: Record<string, number> = {};
listings.forEach(item => {
  const island = item.data.island;
  if (island) {
    islandCounts[island] = (islandCounts[island] || 0) + 1;
  }
});

// Get unique subcategories
const subcategories = [...new Set(listings.map(item => item.data.subcategory).filter(Boolean))].sort();

// Group by subcategory
const groupedBySubcategory = listings.reduce((acc, item) => {
  const sub = item.data.subcategory || 'General';
  if (!acc[sub]) acc[sub] = [];
  acc[sub].push(item);
  return acc;
}, {} as Record<string, typeof listings>);

// Sort subcategories so "General" is last
const sortedSubKeys = Object.keys(groupedBySubcategory).sort((a, b) => {
    if (a === 'General') return 1;
    if (b === 'General') return -1;
    return a.localeCompare(b);
});
---

<Layout title={`${categoryName} - Gulf Islands Directory`}>
  <section class="py-16 bg-gray-50 min-h-screen">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-8">
        <a href="/" class="text-ocean-600 hover:underline mb-4 inline-block flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
            Back to Home
        </a>
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
            <div>
                <h1 class="font-['Playfair_Display'] text-4xl md:text-5xl font-bold text-gray-900 mt-2">
                    {categoryName} <span class="italic text-ocean-600">Listings</span>
                </h1>
                <p class="text-xl text-gray-600 mt-4 max-w-2xl">
                    Discover {categoryName.toLowerCase()} businesses and services across the Gulf Islands.
                </p>
            </div>
            {subcategories.length > 0 && (
                <div class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm md:w-64">
                    <p class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Jump to Section</p>
                    <div class="flex flex-wrap gap-2">
                        <select class="w-full bg-gray-50 border-none text-sm rounded-lg focus:ring-ocean-500" onchange="window.location.hash=this.value">
                            <option value="">Choose a sub-category...</option>
                            {sortedSubKeys.map(sub => (
                                <option value={`#${sub.toLowerCase().replace(/\s+/g, '-')}`}>{sub}</option>
                            ))}
                        </select>
                    </div>
                </div>
            )}
        </div>
      </div>

      <!-- Island Filter Bar -->
      <div class="mb-10 sticky top-0 z-10 -mx-6 px-6 py-4 bg-gradient-to-b from-gray-50 via-gray-50 to-transparent">
        <div class="flex flex-col sm:flex-row sm:items-center gap-3">
          <span class="text-sm font-bold text-gray-500 uppercase tracking-wider flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Filter by Island
          </span>
          <div class="flex flex-wrap gap-2" id="island-filter">
            <button 
              data-island="all" 
              class="island-btn active px-4 py-2 rounded-full text-sm font-semibold transition-all bg-ocean-600 text-white shadow-sm"
            >
              All Islands <span class="ml-1 opacity-75">({listings.length})</span>
            </button>
            {islands.map(island => (
              <button 
                data-island={island}
                class="island-btn px-4 py-2 rounded-full text-sm font-semibold transition-all bg-white text-gray-700 border border-gray-200 hover:border-ocean-300 hover:text-ocean-600"
              >
                {island.split(' ')[0]} <span class="ml-1 opacity-50">({islandCounts[island]})</span>
              </button>
            ))}
          </div>
        </div>
      </div>

      {listings.length === 0 ? (
        <div class="bg-white rounded-2xl p-12 text-center border border-gray-200">
          <p class="text-gray-500 text-lg">No listings found in this category yet.</p>
          <a href="/submit-listing" class="text-ocean-600 font-semibold mt-4 inline-block">Add your business &rarr;</a>
        </div>
      ) : (
        <div class="space-y-20">
          {sortedSubKeys.map((sub) => (
            <div id={sub.toLowerCase().replace(/\s+/g, '-')} class="subcategory-section" data-subcategory={sub}>
              <h2 class="text-2xl font-bold text-gray-800 border-b border-gray-200 pb-4 mb-8 flex items-center gap-3">
                <span class="w-2 h-8 bg-ocean-500 rounded-full"></span>
                {sub}
                <span class="text-sm font-normal text-gray-400 ml-auto subcategory-count">{groupedBySubcategory[sub].length} results</span>
              </h2>
              
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {groupedBySubcategory[sub].sort((a, b) => a.data.name.localeCompare(b.data.name)).map(listing => (
                  <div class="listing-card bg-white rounded-xl p-5 shadow-sm border border-gray-100 hover:shadow-md hover:border-ocean-100 transition flex flex-col h-full group" data-island={listing.data.island}>
                    {/* Category icon + name â€” first line */}
                    <div class={`inline-flex items-center gap-1.5 mb-3 ${cfg.color}`}>
                      <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={cfg.icon} />
                      <span class="text-[11px] font-bold uppercase tracking-wider">{cfg.label}</span>
                    </div>

                    <div class="flex items-start justify-between mb-1.5">
                      <h3 class="text-base font-bold text-gray-900 group-hover:text-ocean-600 transition-colors leading-snug">{listing.data.name}</h3>
                      <span class="ml-2 bg-gray-100 text-gray-500 text-[10px] px-2 py-0.5 rounded font-bold uppercase whitespace-nowrap flex-shrink-0">{listing.data.island?.split(' ')[0]}</span>
                    </div>

                    <p class="text-gray-500 text-sm line-clamp-3 leading-relaxed flex-1">
                      {listing.data.description || "Local business serving the Gulf Islands."}
                    </p>

                    {listing.data.url && (
                      <p class="mt-3 pt-3 border-t border-gray-50 text-gray-400 text-xs font-mono truncate">
                        {cleanUrl(listing.data.url)}
                      </p>
                    )}
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      )}

      <!-- No results message (hidden by default) -->
      <div id="no-results" class="hidden bg-white rounded-2xl p-12 text-center border border-gray-200">
        <p class="text-gray-500 text-lg">No listings found for the selected island in this category.</p>
        <button onclick="document.querySelector('[data-island=all]').click()" class="text-ocean-600 font-semibold mt-4 inline-block">Show all islands &rarr;</button>
      </div>
    </div>
  </section>

  <script>
    // Island filter functionality
    document.addEventListener('DOMContentLoaded', () => {
      const buttons = document.querySelectorAll('.island-btn');
      const cards = document.querySelectorAll('.listing-card');
      const sections = document.querySelectorAll('.subcategory-section');
      const noResults = document.getElementById('no-results');
      
      function applyIslandFilter(selectedIsland: string) {
        // Update button styles
        buttons.forEach(b => {
          const btnIsland = (b as HTMLElement).dataset.island;
          if (btnIsland === selectedIsland || (selectedIsland === 'all' && btnIsland === 'all')) {
            b.classList.add('active', 'bg-ocean-600', 'text-white', 'shadow-sm');
            b.classList.remove('bg-white', 'text-gray-700', 'border', 'border-gray-200', 'hover:border-ocean-300', 'hover:text-ocean-600');
          } else {
            b.classList.remove('active', 'bg-ocean-600', 'text-white', 'shadow-sm');
            b.classList.add('bg-white', 'text-gray-700', 'border', 'border-gray-200', 'hover:border-ocean-300', 'hover:text-ocean-600');
          }
        });
        
        // Filter cards
        let visibleCount = 0;
        cards.forEach(card => {
          if (selectedIsland === 'all' || (card as HTMLElement).dataset.island === selectedIsland) {
            card.classList.remove('hidden');
            visibleCount++;
          } else {
            card.classList.add('hidden');
          }
        });
        
        // Update section visibility and counts
        sections.forEach(section => {
          const visibleSectionCards = section.querySelectorAll('.listing-card:not(.hidden)');
          const countEl = section.querySelector('.subcategory-count');
          
          if (visibleSectionCards.length === 0) {
            section.classList.add('hidden');
          } else {
            section.classList.remove('hidden');
            if (countEl) {
              countEl.textContent = `${visibleSectionCards.length} result${visibleSectionCards.length !== 1 ? 's' : ''}`;
            }
          }
        });
        
        // Show/hide no results message
        if (visibleCount === 0) {
          noResults?.classList.remove('hidden');
        } else {
          noResults?.classList.add('hidden');
        }
        
        // Update URL without reload
        const url = new URL(window.location.href);
        if (selectedIsland === 'all') {
          url.searchParams.delete('island');
        } else {
          url.searchParams.set('island', selectedIsland);
        }
        window.history.replaceState({}, '', url);
      }
      
      // Button click handlers
      buttons.forEach(btn => {
        btn.addEventListener('click', () => {
          const selectedIsland = (btn as HTMLElement).dataset.island || 'all';
          applyIslandFilter(selectedIsland);
          // Also update the global header selector
          localStorage.setItem('selectedIsland', selectedIsland);
        });
      });
      
      // Check URL param first, then localStorage
      const urlParams = new URLSearchParams(window.location.search);
      const islandParam = urlParams.get('island');
      const savedIsland = islandParam || localStorage.getItem('selectedIsland') || 'all';
      
      if (savedIsland && savedIsland !== 'all') {
        applyIslandFilter(savedIsland);
      }
      
      // Listen for changes from header selector
      window.addEventListener('islandChanged', ((e: CustomEvent) => {
        applyIslandFilter(e.detail.island);
      }) as EventListener);
    });
  </script>
</Layout>