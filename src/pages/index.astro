  },
  education: {
    color: 'text-purple-700',
    bg: 'bg-purple-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>`
  },
  community: {
    color: 'text-purple-600',
    bg: 'bg-purple-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>`
  },
};

// Map slugs to downloaded logo images
const featuredImages: Record<string, string> = {
  'salt-spring-island-firerescue': '/images/featured/saltspring-fire-crest.png',
  'salt-spring-centre': '/images/featured/saltspring-centre.png',
  'oceanwood-country-inn': '/images/featured/oceanwood.png',
};

// Category label display names
const categoryLabels: Record<string, string> = {
  stay: 'Stay',
  eat: 'Eat & Drink',
  'arts-culture': 'Arts & Culture',
  shopping: 'Shopping',
  marine: 'Marine & Boating',
  'getting-here': 'Getting Here',
  'real-estate': 'Real Estate',
  activities: 'Activities & Outdoors',
  trades: 'Trades & Professional',
  health: 'Health & Wellness',
  farms: 'Farms & Agriculture',
  news: 'News & Media',
  education: 'Education',
  community: 'Community & Government',
};

function cleanUrl(url: string): string {
  return url.replace(/^https?:\/\/(www\.)?/, '').replace(/\/$/, '');
}
---

<Layout>
  <!-- Hero - Directory Focused -->
  <section class="relative text-white overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="/images/islands/salt-spring-ferry-hero.jpg"
        alt="Gulf Islands ferry view"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-ocean-900/80 via-ocean-900/60 to-ocean-900/30"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-6 py-20 md:py-28">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-sm uppercase tracking-widest text-ocean-200 mb-4 font-medium">The Gulf Islands Directory</p>
          <h1 class="font-['Playfair_Display'] text-4xl md:text-6xl font-bold mb-6 leading-tight text-white">
            I am on
            <span class="inline-flex items-center relative">
              <select id="hero-island-select" class="appearance-none bg-transparent border-b-2 border-ocean-200 text-ocean-200 italic font-semibold text-4xl md:text-6xl cursor-pointer focus:outline-none pr-8 min-w-[200px]">
                <option value="all">...</option>
                <option value="Salt Spring Island">Salt Spring</option>
                <option value="Galiano Island">Galiano</option>
                <option value="Mayne Island">Mayne</option>
                <option value="Pender Island">Pender</option>
                <option value="Gabriola Island">Gabriola</option>
                <option value="Saturna Island">Saturna</option>
              </select>
              <svg class="w-6 h-6 md:w-8 md:h-8 text-ocean-200 absolute right-0 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </span>
            Island
          </h1>
          <p class="text-xl text-gray-200 mb-8 leading-relaxed">
            Your guide to local businesses, services, and community resources.
          </p>

          <div class="flex flex-wrap gap-4">
            <a href="#directory" class="bg-white text-ocean-700 hover:bg-gray-100 px-6 py-3 rounded-lg font-semibold transition shadow-lg">
              Browse Directory
            </a>
            <a href="/submit-listing" class="border-2 border-white/40 hover:border-white/80 text-white px-6 py-3 rounded-lg font-semibold transition">
              Add Your Business
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Listings -->
  <section class="py-14 bg-ocean-50/50">
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex justify-between items-end mb-10">
        <div>
          <h2 class="font-['Playfair_Display'] text-3xl font-bold text-gray-900 mb-2">Featured Local <span class="italic text-ocean-600">Businesses</span></h2>
          <p class="text-gray-600">Highly-rated services and organizations across the islands.</p>
        </div>
        <a href="#directory" class="text-ocean-600 font-semibold hover:underline hidden sm:block">Browse all categories →</a>
      </div>

      <div class="grid md:grid-cols-2 gap-5">
        {featuredListings.map(listing => {
          const cat = listing.data.category as string;
          const cfg = categoryConfig[cat] ?? categoryConfig['services'];
          const img = featuredImages[listing.slug];
          const displayUrl = listing.data.url ? cleanUrl(listing.data.url) : null;
          const catLabel = categoryLabels[cat] ?? cat;
          return (
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition overflow-hidden flex group relative">
              {/* Left panel — logo/image or colored icon block */}
              <div class={`w-36 flex-shrink-0 flex items-center justify-center p-4 ${cfg.bg}`}>
                {img ? (
                  <img
                    src={img}
                    alt={listing.data.name}
                    class="max-w-full max-h-20 object-contain"
                  />
                ) : (
                  <svg class={`w-10 h-10 ${cfg.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={cfg.icon} />
                )}
              </div>

              {/* Right panel — content */}
              <div class="flex flex-col flex-1 p-5 min-w-0">
                {/* Top: Featured badge + category */}
                <div class="flex items-center gap-2 mb-2">
                  <span class={`inline-flex items-center gap-1 text-[11px] font-bold uppercase tracking-wider ${cfg.color}`}>
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={cfg.icon} />
                    {catLabel}
                  </span>
                  <span class="ml-auto bg-ocean-100 text-ocean-600 text-[9px] font-black px-2 py-0.5 rounded uppercase tracking-tight">Featured</span>
                </div>

                {/* Business name */}
                <h3 class="text-base font-bold text-gray-900 group-hover:text-ocean-600 transition-colors leading-snug mb-1">
                  {listing.data.name}
                </h3>

                {/* Island */}
                <p class="text-xs text-gray-400 font-medium mb-2">{listing.data.island}</p>

                {/* Description */}
                <p class="text-gray-500 text-sm line-clamp-2 leading-relaxed flex-1">
                  {listing.data.description || "Local business serving the Gulf Islands community."}
                </p>

                {/* URL — clickable but clean-looking */}
                {displayUrl && (
                  <a
                    href={listing.data.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="mt-3 text-ocean-600 text-xs font-semibold hover:text-ocean-800 hover:underline truncate block"
                  >
                    {displayUrl}
                  </a>
                )}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Browse by Category -->
  <section id="directory" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="font-['Playfair_Display'] text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Browse by <span class="italic text-ocean-600">Category</span>
        </h2>
        <p class="text-gray-600 max-w-xl mx-auto">
          Find exactly what you're looking for across all the Gulf Islands.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Stay -->
        <a href="/directory/stay" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-ocean-600">
          <div class="absolute inset-0 bg-gradient-to-t from-ocean-900/90 via-ocean-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.stay.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Stay</h3>
            <p class="text-ocean-100 text-sm">Hotels, B&Bs, Cabins, Camping</p>
          </div>
        </a>

        <!-- Eat & Drink -->
        <a href="/directory/eat" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-forest-600">
          <div class="absolute inset-0 bg-gradient-to-t from-forest-900/90 via-forest-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.eat.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Eat & Drink</h3>
            <p class="text-forest-100 text-sm">Restaurants, Cafés, Wineries</p>
          </div>
        </a>

        <!-- Arts & Culture -->
        <a href="/directory/arts-culture" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-purple-600">
          <div class="absolute inset-0 bg-gradient-to-t from-purple-900/90 via-purple-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig['arts-culture'].icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Arts & Culture</h3>
            <p class="text-purple-100 text-sm">Artists, Galleries, Venues</p>
          </div>
        </a>

        <!-- Marine & Boating -->
        <a href="/directory/marine" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-ocean-700">
          <div class="absolute inset-0 bg-gradient-to-t from-ocean-900/90 via-ocean-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.marine.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Marine & Boating</h3>
            <p class="text-ocean-100 text-sm">Marinas, Rentals, Repairs</p>
          </div>
        </a>

        <!-- Getting Here -->
        <a href="/directory/getting-here" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-ocean-500">
          <div class="absolute inset-0 bg-gradient-to-t from-ocean-800/90 via-ocean-800/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig['getting-here'].icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Getting Here</h3>
            <p class="text-ocean-100 text-sm">Ferries, Air, Transport</p>
          </div>
        </a>

        <!-- Real Estate -->
        <a href="/directory/real-estate" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-forest-500">
          <div class="absolute inset-0 bg-gradient-to-t from-forest-800/90 via-forest-800/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig['real-estate'].icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Real Estate</h3>
            <p class="text-forest-100 text-sm">Homes, Land, Rentals</p>
          </div>
        </a>

        <!-- Activities & Outdoors -->
        <a href="/directory/activities" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-sand-500">
          <div class="absolute inset-0 bg-gradient-to-t from-sand-800/90 via-sand-800/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.activities.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Activities</h3>
            <p class="text-sand-100 text-sm">Hiking, Tours, Tours</p>
          </div>
        </a>

        <!-- Trades & Prof. -->
        <a href="/directory/trades" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-gray-700">
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.trades.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Trades</h3>
            <p class="text-gray-300 text-sm">Construction, Legal, IT</p>
          </div>
        </a>

        <!-- Health & Wellness -->
        <a href="/directory/health" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-teal-600">
          <div class="absolute inset-0 bg-gradient-to-t from-teal-900/90 via-teal-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.health.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Health</h3>
            <p class="text-teal-100 text-sm">Clinics, Spas, Fitness</p>
          </div>
        </a>

        <!-- Farms & Agriculture -->
        <a href="/directory/farms" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-forest-700">
          <div class="absolute inset-0 bg-gradient-to-t from-forest-900/90 via-forest-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.farms.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Farms</h3>
            <p class="text-forest-100 text-sm">Orchards, Markets, Livestock</p>
          </div>
        </a>

        <!-- News & Media -->
        <a href="/directory/news" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-blue-700">
          <div class="absolute inset-0 bg-gradient-to-t from-blue-900/90 via-blue-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.news.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">News</h3>
            <p class="text-blue-100 text-sm">Newspapers, Radio, Blogs</p>
          </div>
        </a>

        <!-- Community & Govt -->
        <a href="/directory/community" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-purple-700">
          <div class="absolute inset-0 bg-gradient-to-t from-purple-900/90 via-purple-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3 group-hover:bg-white/30 transition">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={categoryConfig.community.icon} />
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Community</h3>
            <p class="text-purple-100 text-sm">Schools, Govt, Groups</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Editor's Highlights (NEW - Sense of Place) -->
