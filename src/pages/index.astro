---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allListings = await getCollection('directory');
const featuredSlugs = [
  'salt-spring-island-firerescue',
  'salt-spring-centre',
  'oceanwood-country-inn',
  'the-hastings-country-house-hotel',
  'restaurant-house-piccolo',
  'harlans-chocolates',
  'salt-spring-resort-spa-retreat',
  'cliffhouse-cottages',
];
const featuredListings = allListings.filter(l =>
  featuredSlugs.includes(l.slug)
);

// Category icon paths and colors
const categoryConfig: Record<string, { color: string; bg: string; icon: string }> = {
  stay: {
    color: 'text-ocean-600',
    bg: 'bg-ocean-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>`
  },
  eat: {
    color: 'text-forest-600',
    bg: 'bg-forest-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h1a4 4 0 110 8h-1m-4-8H4a1 1 0 00-1 1v6a1 1 0 001 1h9a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v2"/>`
  },
  'arts-culture': {
    color: 'text-purple-600',
    bg: 'bg-purple-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>`
