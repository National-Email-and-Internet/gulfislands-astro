<script>
  // Hero island selector - sync with global header selector
  const heroSelect = document.getElementById('hero-island-select') as HTMLSelectElement;
  
  // Load saved island from localStorage
  const savedIsland = localStorage.getItem('selectedIsland') || 'all';
  if (heroSelect) heroSelect.value = savedIsland;
  
  heroSelect?.addEventListener('change', (e) => {
    const value = (e.target as HTMLSelectElement).value;
    localStorage.setItem('selectedIsland', value);
    // Dispatch event for other components to listen
    window.dispatchEvent(new CustomEvent('islandChanged', { detail: { island: value } }));
    // Also update header selector if present
    const headerSelect = document.getElementById('island-selector') as HTMLSelectElement;
    const mobileSelect = document.getElementById('island-selector-mobile') as HTMLSelectElement;
    if (headerSelect) headerSelect.value = value;
    if (mobileSelect) mobileSelect.value = value;
  });
</script>
