---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero - Directory Focused -->
  <section class="relative bg-gradient-to-br from-ocean-800 via-ocean-700 to-forest-700 text-white">
    <div class="max-w-6xl mx-auto px-6 py-20 md:py-28">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-sm uppercase tracking-widest text-ocean-200 mb-4 font-medium">The Gulf Islands Directory</p>
          <h1 class="font-['Playfair_Display'] text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Find <span class="italic text-ocean-200">Local</span> Businesses & Services
          </h1>
          <p class="text-xl text-gray-200 mb-8 leading-relaxed">
            Your comprehensive guide to Gulf Islands businesses, services, and community resources. From Salt Spring to Saturna, find what you need.
          </p>
          
          <!-- Search Box -->
          <div class="bg-white rounded-xl p-2 shadow-2xl">
            <form class="flex flex-col sm:flex-row gap-2">
              <input 
                type="text" 
                placeholder="Search businesses, services..." 
                class="flex-1 px-4 py-3 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-ocean-500"
              />
              <select class="px-4 py-3 text-gray-600 rounded-lg bg-gray-50 focus:outline-none focus:ring-2 focus:ring-ocean-500">
                <option>All Islands</option>
                <option>Salt Spring</option>
                <option>Galiano</option>
                <option>Mayne</option>
                <option>Pender</option>
                <option>Gabriola</option>
                <option>Saturna</option>
              </select>
              <button type="submit" class="bg-ocean-600 hover:bg-ocean-700 text-white px-6 py-3 rounded-lg font-semibold transition">
                Search
              </button>
            </form>
          </div>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <div class="text-3xl md:text-4xl font-bold text-ocean-200 mb-1">500+</div>
            <div class="text-gray-300 text-sm">Local Listings</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <div class="text-3xl md:text-4xl font-bold text-ocean-200 mb-1">7</div>
            <div class="text-gray-300 text-sm">Gulf Islands</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <div class="text-3xl md:text-4xl font-bold text-ocean-200 mb-1">50+</div>
            <div class="text-gray-300 text-sm">Categories</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <div class="text-3xl md:text-4xl font-bold text-ocean-200 mb-1">24/7</div>
            <div class="text-gray-300 text-sm">Always Available</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Browse by Category -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="font-['Playfair_Display'] text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Browse by <span class="italic text-ocean-600">Category</span>
        </h2>
        <p class="text-gray-600 max-w-xl mx-auto">
          Find exactly what you're looking for across all the Gulf Islands.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Stay -->
        <a href="/directory/stay" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-ocean-600">
          <div class="absolute inset-0 bg-gradient-to-t from-ocean-900/90 via-ocean-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Stay</h3>
            <p class="text-ocean-100 text-sm">Hotels, B&Bs, Cabins, Camping</p>
          </div>
        </a>

        <!-- Eat & Drink -->
        <a href="/directory/eat" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-forest-600">
          <div class="absolute inset-0 bg-gradient-to-t from-forest-900/90 via-forest-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Eat & Drink</h3>
            <p class="text-forest-100 text-sm">Restaurants, Cafés, Wineries</p>
          </div>
        </a>

        <!-- Activities -->
        <a href="/directory/activities" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-sand-500">
          <div class="absolute inset-0 bg-gradient-to-t from-sand-800/90 via-sand-800/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Activities</h3>
            <p class="text-sand-100 text-sm">Tours, Rentals, Adventures</p>
          </div>
        </a>

        <!-- Services -->
        <a href="/directory/services" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-gray-700">
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Services</h3>
            <p class="text-gray-300 text-sm">Trades, Professional, Health</p>
          </div>
        </a>

        <!-- Shopping -->
        <a href="/directory/shopping" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-ocean-500">
          <div class="absolute inset-0 bg-gradient-to-t from-ocean-800/90 via-ocean-800/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Shopping</h3>
            <p class="text-ocean-100 text-sm">Local Artisan, Groceries, Gifts</p>
          </div>
        </a>

        <!-- Real Estate -->
        <a href="/directory/real-estate" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-forest-500">
          <div class="absolute inset-0 bg-gradient-to-t from-forest-800/90 via-forest-800/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Real Estate</h3>
            <p class="text-forest-100 text-sm">Homes, Land, Rentals</p>
          </div>
        </a>

        <!-- Health & Wellness -->
        <a href="/directory/health" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-teal-600">
          <div class="absolute inset-0 bg-gradient-to-t from-teal-900/90 via-teal-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Health & Wellness</h3>
            <p class="text-teal-100 text-sm">Clinics, Spas, Fitness</p>
          </div>
        </a>

        <!-- Community -->
        <a href="/directory/community" class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-purple-600">
          <div class="absolute inset-0 bg-gradient-to-t from-purple-900/90 via-purple-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-xl text-white mb-1">Community</h3>
            <p class="text-purple-100 text-sm">Organizations, Events, Groups</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA: Submit Your Listing -->
  <section class="py-20 bg-gradient-to-r from-ocean-600 to-forest-600 text-white">
    <div class="max-w-5xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="font-['Playfair_Display'] text-3xl md:text-4xl font-bold mb-6">
            Get <span class="italic">Listed</span> Today
          </h2>
          <p class="text-lg text-white/90 mb-6 leading-relaxed">
            Reach thousands of visitors and locals searching for Gulf Islands businesses. A listing puts you on the map — literally.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-ocean-200 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Featured placement in your category</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-ocean-200 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Photos, hours, contact info, and map</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-ocean-200 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Link to your website and social media</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-ocean-200 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span>Customer reviews and ratings</span>
            </li>
          </ul>
          <a href="/submit-listing" class="inline-block bg-white text-ocean-700 hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold transition shadow-lg">
            Submit Your Listing →
          </a>
        </div>
        
        <!-- Pricing Cards -->
        <div class="space-y-4">
          <!-- Basic -->
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-semibold text-lg">Basic Listing</h3>
                <p class="text-white/70 text-sm">Perfect for getting started</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold">$49</div>
                <div class="text-white/60 text-xs">/year</div>
              </div>
            </div>
            <p class="text-white/80 text-sm">Name, description, contact info, and category placement.</p>
          </div>
          
          <!-- Featured -->
          <div class="bg-white rounded-xl p-6 text-gray-800 ring-2 ring-ocean-300 relative">
            <div class="absolute -top-3 right-4 bg-ocean-600 text-white text-xs font-bold px-3 py-1 rounded-full">
              MOST POPULAR
            </div>
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-semibold text-lg">Featured Listing</h3>
                <p class="text-gray-500 text-sm">Maximum visibility</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-ocean-700">$149</div>
                <div class="text-gray-400 text-xs">/year</div>
              </div>
            </div>
            <p class="text-gray-600 text-sm">Everything in Basic + photos, hours, map, website link, and priority placement.</p>
          </div>
          
          <!-- Premium -->
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-semibold text-lg">Premium Listing</h3>
                <p class="text-white/70 text-sm">For serious businesses</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold">$299</div>
                <div class="text-white/60 text-xs">/year</div>
              </div>
            </div>
            <p class="text-white/80 text-sm">Featured listing + banner ad, social media promotion, and analytics dashboard.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Browse by Island (Secondary) -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-10">
        <h2 class="font-['Playfair_Display'] text-2xl md:text-3xl font-bold text-gray-900 mb-3">
          Browse by <span class="italic text-ocean-600">Island</span>
        </h2>
        <p class="text-gray-600">
          Each island has its own unique community and offerings.
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-3">
        <a href="/islands/salt-spring" class="px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-ocean-400 hover:bg-ocean-50 transition font-medium text-gray-700">
          Salt Spring Island
        </a>
        <a href="/islands/galiano" class="px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-ocean-400 hover:bg-ocean-50 transition font-medium text-gray-700">
          Galiano Island
        </a>
        <a href="/islands/mayne" class="px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-ocean-400 hover:bg-ocean-50 transition font-medium text-gray-700">
          Mayne Island
        </a>
        <a href="/islands/pender" class="px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-ocean-400 hover:bg-ocean-50 transition font-medium text-gray-700">
          Pender Islands
        </a>
        <a href="/islands/gabriola" class="px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-ocean-400 hover:bg-ocean-50 transition font-medium text-gray-700">
          Gabriola Island
        </a>
        <a href="/islands/saturna" class="px-6 py-3 bg-white rounded-full border border-gray-200 hover:border-ocean-400 hover:bg-ocean-50 transition font-medium text-gray-700">
          Saturna Island
        </a>
      </div>
    </div>
  </section>

  <!-- Email Section (Tertiary) -->
  <section class="py-16 bg-ocean-900 text-white">
    <div class="max-w-5xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-10 items-center">
        <div>
          <p class="text-sm uppercase tracking-widest text-ocean-300 mb-3 font-medium">Personal Email</p>
          <h2 class="font-['Playfair_Display'] text-2xl md:text-3xl font-bold mb-4">
            Your <span class="italic text-ocean-200">Island</span> Email Address
          </h2>
          <p class="text-gray-300 mb-6">
            Show your island connection with @gulfislands.com or @saltspring.com email. Ad-free, private, and secure.
          </p>
          <a href="https://natinternet.com/personal-email/" class="inline-block border-2 border-white/40 hover:border-white/80 px-6 py-3 rounded-lg font-semibold transition">
            Get Island Email →
          </a>
        </div>
        
        <div class="flex gap-4">
          <div class="flex-1 bg-white/10 backdrop-blur-sm rounded-xl p-5 border border-white/20 text-center">
            <div class="text-lg font-semibold mb-1">yourname@<br/>gulfislands.com</div>
          </div>
          <div class="flex-1 bg-white/10 backdrop-blur-sm rounded-xl p-5 border border-white/20 text-center">
            <div class="text-lg font-semibold mb-1">yourname@<br/>saltspring.com</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
