    color: 'text-ocean-700',
    bg: 'bg-ocean-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v9m0 0l-4-4m4 4l4-4M5 12h14l-2 6H7l-2-6z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 20c2 0 3-1 4-1s2 1 4 1 3-1 4-1 2 1 4 1 3-1 4-1"/>`
  },
  'getting-here': {
    color: 'text-ocean-600',
    bg: 'bg-ocean-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>`
  },
  'real-estate': {
    color: 'text-forest-600',
    bg: 'bg-forest-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>`
  },
  activities: {
    color: 'text-sand-600',
    bg: 'bg-sand-100',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>`
