---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import VerifiedBadge from '../../components/badges/VerifiedBadge.astro';
import PremiumBadge from '../../components/badges/PremiumBadge.astro';

export async function getStaticPaths() {
  const islands = [
    { slug: 'salt-spring', name: 'Salt Spring Island' },
    { slug: 'galiano', name: 'Galiano Island' },
    { slug: 'mayne', name: 'Mayne Island' },
    { slug: 'pender', name: 'Pender Islands' },
    { slug: 'gabriola', name: 'Gabriola Island' },
    { slug: 'saturna', name: 'Saturna Island' }
  ];

  return islands.map(island => ({
    params: { island: island.slug },
    props: { islandName: island.name }
  }));
}

const { island } = Astro.params;
const { islandName } = Astro.props;

// For the data fetch, we need to match the "island" string in the frontmatter
// Maps the slug to the actual island name string in the database/csv
const islandMap = {
  'salt-spring': 'Salt Spring Island',
  'galiano': 'Galiano Island',
  'mayne': 'Mayne Island',
  'pender': 'Pender Island', // Note: csv often uses 'Pender Island' singular
  'gabriola': 'Gabriola Island',
  'saturna': 'Saturna Island'
};

const allListings = await getCollection('directory');
const listings = allListings.filter(item => 
  item.data.island === islandMap[island] || 
  (island === 'pender' && item.data.island.includes('Pender'))
);

// Group by category
const groupedByCategory = listings.reduce((acc, item) => {
  const category = item.data.category || 'Other';
  if (!acc[category]) acc[category] = [];
  acc[category].push(item);
  return acc;
}, {});

const categoryConfig: Record<string, { color: string; label: string; icon: string }> = {
  stay: { color: 'text-white', label: 'Stay', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>` },
  eat: { color: 'text-forest-600', label: 'Eat & Drink', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h1a4 4 0 110 8h-1m-4-8H4a1 1 0 00-1 1v6a1 1 0 001 1h9a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v2"/>` },
  'arts-culture': { color: 'text-purple-600', label: 'Arts & Culture', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>` },
  shopping: { color: 'text-ocean-500', label: 'Shopping', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>` },
  marine: { color: 'text-ocean-700', label: 'Marine & Boating', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v9m0 0l-4-4m4 4l4-4M5 12h14l-2 6H7l-2-6z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 20c2 0 3-1 4-1s2 1 4 1 3-1 4-1 2 1 4 1 3-1 4-1"/>` },
  'getting-here': { color: 'text-ocean-600', label: 'Getting Here', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>` },
  'real-estate': { color: 'text-forest-600', label: 'Real Estate', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>` },
  activities: { color: 'text-sand-600', label: 'Activities & Outdoors', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>` },
  trades: { color: 'text-gray-600', label: 'Trades & Professional', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>` },
  health: { color: 'text-teal-600', label: 'Health & Wellness', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>` },
  farms: { color: 'text-forest-600', label: 'Farms & Agriculture', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19V6m0 13c-2-2-5-3-7-3 0-4 2.5-7 7-7s7 3 7 7c-2 0-5 1-7 3z"/>` },
  news: { color: 'text-blue-600', label: 'News & Media', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>` },
  education: { color: 'text-purple-700', label: 'Education', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>` },
  community: { color: 'text-purple-600', label: 'Community & Government', icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a2 2 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>` },
};

function cleanUrl(url: string): string {
  return url.replace(/^https?:\/\/(www\.)?/, '').replace(/\/$/, '');
}

// Sorting helper for tiers
const tierOrder = {
  'premium-featured': 0,
  'premium': 1,
  'basic': 2
};
---

<Layout title={`${islandName} - Gulf Islands Directory`}>
  <section class="py-16 bg-gray-50 min-h-screen">
    <div class="max-w-6xl mx-auto px-6">
      <div class="mb-12">
        <a href="/" class="text-ocean-600 hover:underline mb-4 inline-block">← Back to Home</a>
        <h1 class="font-['Playfair_Display'] text-4xl md:text-5xl font-bold text-gray-900 mt-2">
          {islandName} <span class="italic text-ocean-600">Directory</span>
        </h1>
        <p class="text-xl text-gray-600 mt-4">
          Browse local businesses and community organizations on {islandName}.
        </p>
      </div>

      {Object.keys(groupedByCategory).length === 0 ? (
        <div class="bg-white rounded-2xl p-12 text-center border border-gray-200">
          <p class="text-gray-500 text-lg">No listings found for this island yet.</p>
          <a href="/submit-listing" class="text-ocean-600 font-semibold mt-4 inline-block">Add a listing →</a>
        </div>
      ) : (
        <div class="space-y-16">
          {Object.entries(groupedByCategory).sort().map(([category, catListings]) => (
            <div>
              {(() => {
                const catCfg = categoryConfig[category] ?? categoryConfig['services'];
                return (
                  <>
                    <h2 class="text-2xl font-bold text-gray-800 border-b border-gray-200 pb-4 mb-8 flex items-center gap-3">
                      <span class="w-2 h-8 bg-forest-500 rounded-full"></span>
                      <svg class={`w-5 h-5 ${catCfg.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={catCfg.icon} />
                      {catCfg.label}
                    </h2>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                      {catListings.sort((a, b) => {
                        const aFeatured = a.data.featured ? 0 : 1;
                        const bFeatured = b.data.featured ? 0 : 1;
                        if (aFeatured !== bFeatured) return aFeatured - bFeatured;
                        return a.data.name.localeCompare(b.data.name);
                      }).map(listing => (
<div class="bg-white rounded-xl p-5 shadow-sm border border-gray-100 hover:shadow-md transition flex flex-col h-full group">
                          {/* Category icon + name — first line */}
                          <div class={`inline-flex items-center gap-1.5 mb-3 ${catCfg.color}`}>
                            <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={catCfg.icon} />
                            <span class="text-[11px] font-bold uppercase tracking-wider">{catCfg.label}</span>
                          </div>

                          <div class="flex flex-col gap-1 mb-1">
                            <h3 class="text-base font-bold text-gray-900 group-hover:text-ocean-600 transition-colors leading-snug">
                              <a href={`/directory/${listing.slug}`}>{listing.data.name}</a>
                            </h3>
                            <div class="flex flex-wrap gap-1.5">
                              {listing.data.tier === 'premium' && <PremiumBadge />}
                              {listing.data.claimed && <VerifiedBadge />}
                            </div>
                          </div>

                          {listing.data.subcategory && (
                            <span class="text-xs text-gray-400 font-medium mb-2 block">{listing.data.subcategory}</span>
                          )}

                          <p class="text-gray-500 text-sm line-clamp-3 leading-relaxed flex-1">
                            {listing.data.description || "Local business serving the Gulf Islands."}
                          </p>

                          <div class="mt-3 pt-3 border-t border-gray-50 flex items-center justify-between">
                            {listing.data.url ? (
                              <p class="text-gray-400 text-xs font-mono truncate max-w-[150px]">
                                {cleanUrl(listing.data.url)}
                              </p>
                            ) : <div></div>}
                            
                            {!listing.data.claimed && (
                              <a 
                                href={`/claim-listing?slug=${listing.slug}`}
                                class="text-ocean-600 text-[10px] font-bold uppercase tracking-wider hover:text-ocean-800 transition-colors"
                              >
                                Claim Business &rarr;
                              </a>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </>
                );
              })()}
            </div>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>
